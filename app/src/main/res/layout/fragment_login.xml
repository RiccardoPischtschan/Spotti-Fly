<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Fragment">

    <ImageView
        android:id="@+id/logo_view"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/group_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Benutzername_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/nav_item"
        app:layout_constraintEnd_toEndOf="@+id/logo_view"
        app:layout_constraintStart_toStartOf="@+id/logo_view"
        app:layout_constraintTop_toBottomOf="@+id/logo_view" />

    <ImageView
        android:id="@+id/passwort_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/nav_item_passwort"
        app:layout_constraintEnd_toEndOf="@+id/Benutzername_text"
        app:layout_constraintStart_toStartOf="@+id/Benutzername_text"
        app:layout_constraintTop_toBottomOf="@+id/Benutzername_text" />

    <ImageView
        android:id="@+id/Anmelde_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/nav_item_anmelden"
        app:layout_constraintEnd_toEndOf="@+id/passwort_text"
        app:layout_constraintStart_toStartOf="@+id/passwort_text"
        app:layout_constraintTop_toBottomOf="@+id/passwort_text" />

    <ImageView
        android:id="@+id/facebook_anmelde_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_facebook"
        app:layout_constraintBottom_toTopOf="@+id/google_anmelde_button"
        app:layout_constraintEnd_toEndOf="@+id/Anmelde_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/Anmelde_button"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <ImageView
        android:id="@+id/google_anmelde_button"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:src="@drawable/button_google"
        app:layout_constraintBottom_toTopOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="@+id/facebook_anmelde_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/facebook_anmelde_button"
        app:layout_constraintTop_toBottomOf="@+id/facebook_anmelde_button" />

    <ImageView
        android:id="@+id/Nutzungsbedingungen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@drawable/nav_item_nutzungsbedingung"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Anmelde_button"
        app:layout_constraintStart_toStartOf="@+id/Anmelde_button" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/shadow_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Anmelde_button" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/shadow_line"
        app:layout_constraintBottom_toTopOf="@+id/Nutzungsbedingungen_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>