<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/kommentar_user_image_recycler"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/user_images" />

    <TextView
        android:id="@+id/kommentar_user_name_recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textAlignment="center"
        android:textColor="@color/ac_dunkel_grau"
        app:layout_constraintBottom_toBottomOf="@+id/kommentar_user_image_recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/kommentar_user_image_recycler"
        app:layout_constraintTop_toTopOf="@+id/kommentar_user_image_recycler"
        tools:text="Name des Users" />

    <TextView
        android:id="@+id/kommentar_kommentar_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/ac_dunkel_grau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kommentar_user_name_recycler"
        tools:text="kommentar vom User" />

    <ImageView
        android:id="@+id/kommentar_like_button_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/kommentar_kommentar_button_recycler"
        app:layout_constraintEnd_toStartOf="@+id/kommentar_kommentar_button_recycler"
        app:layout_constraintTop_toTopOf="@+id/kommentar_kommentar_button_recycler"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/kommentar_kommentar_button_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kommentar_kommentar_text"
        app:srcCompat="@drawable/message_left"
        tools:layout_editor_absoluteX="279dp" />

    <ImageView
        android:id="@+id/kommentar_option_button_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/kommentar_kommentar_button_recycler"
        app:layout_constraintStart_toEndOf="@+id/kommentar_kommentar_button_recycler"
        app:layout_constraintTop_toTopOf="@+id/kommentar_kommentar_button_recycler"
        app:srcCompat="@drawable/more_vert_24px" />
</androidx.constraintlayout.widget.ConstraintLayout>